doctype html
html
	head
		meta(charset='utf-8')
		link(rel="stylesheet", href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700")
		link(rel="stylesheet", href="//fonts.googleapis.com/icon?family=Material+Icons")
		link(rel="stylesheet", href="/bower/bootstrap/dist/css/bootstrap.min.css")

		link(rel='stylesheet', href='/bower/bootstrap-material-design/dist/css/bootstrap-material-design.css')
		link(rel='stylesheet', href='/bower/bootstrap-material-design/dist/css/ripples.min.css')
	body
		.container
			.row
				.col-xs-4.col-xs-offset-4
					h1 Sign Up
					form.form-horizontal(method='post', action='/sign_up')
						.form-group
							label.control-label Username:
							input.form-control(type='text', name='uid', required)
							label.control-label Email:
							input.form-control(type='text', name='email', required)
							label.control-label Password:
							input.form-control(type='password', name='password', required)
							label.control-label Confirm Password:
							input.form-control(type='password', name='confirmPassword', required)
							a.btn.btn-default.pull-left(href='/sign-in') Sign In
							input.btn.btn-primary.pull-right(type='submit', value='Submit')